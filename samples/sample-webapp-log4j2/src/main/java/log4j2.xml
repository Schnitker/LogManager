<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="30">

	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %-5p %c - %m%n</pattern>
			</PatternLayout>
		</Console>
	</appenders>
	
	<loggers>

		<!-- root level -->
		<root level="info">
			<appender-ref ref="Console" />
		</root>
 
	</loggers>

</configuration>
